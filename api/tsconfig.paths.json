{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@config/*": [
                "src/core/config/*"
            ],
            "@controller/*": [
                "src/modules/Users/controller/*",
                "src/modules/Items/controller/*"
            ],
            "@entity/*": [
                "src/modules/Users/entity/*",
                "src/modules/Items/entity/*"
            ],
            "@middlewares/*": [
                "src/core/middlewares/*"
            ],
            "@routes/*": [
                "src/core/routes/*",
                "src/modules/Users/routes/*",
                "src/modules/Items/routes/*"
            ],
            "@schemas/*": [
                "src/core/schemas/*",
                "src/modules/Users/schemas/*",
                "src/modules/Items/schemas/*"
            ]
        }
    }
}