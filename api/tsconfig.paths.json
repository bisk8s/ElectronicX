{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@root/*": [
                "src/*"
            ],
            "@config/*": [
                "src/core/config/*"
            ],
            "@controllers/*": [
                "src/modules/Users/controllers/*",
                "src/modules/Items/controllers/*"
            ],
            "@entities/*": [
                "src/modules/Users/entities/*",
                "src/modules/Items/entities/*"
            ],
            "@middlewares/*": [
                "src/core/middlewares/*",
                "src/modules/Users/middlewares/*"
            ],
            "@routes/*": [
                "src/core/routes/*",
                "src/modules/Users/routes/*",
                "src/modules/Items/routes/*"
            ],
            "@schemas/*": [
                "src/core/schemas/*",
                "src/modules/Users/schemas/*",
                "src/modules/Items/schemas/*"
            ]
        }
    }
}